{
  "name": "shopickup-integration-layer",
  "version": "1.0.0",
  "description": "Universal Multi-Carrier Shipping Integration Layer",
  "private": true,
  "type": "module",
  "scripts": {
    "bootstrap": "pnpm install",
    "build": "pnpm -w run build:core && pnpm -w run build:adapters && pnpm -w run build:examples",
    "build:core": "pnpm --filter @shopickup/core run build",
    "build:adapters": "pnpm --filter '@shopickup/adapters-*' run build",
    "build:examples": "pnpm --filter shopickup-dev-server-example run build",
    "start:dev-server": "pnpm --filter shopickup-dev-server-example run dev",
    "dev": "pnpm -w -r --parallel dev",
    "lint": "eslint . --ext .ts",
    "test": "vitest --run",
    "test:coverage": "vitest --run --coverage"
  },
  "workspaces": [
    "packages/core",
    "packages/adapters/foxpost",
    "examples/dev-server"
  ],
  "devDependencies": {
    "@types/nock": "^11.1.0",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-c8": "^0.33.0",
    "@vitest/coverage-v8": "^4.0.17",
    "c8": "^10.1.3",
    "eslint": "^8.54.0",
    "nock": "^14.0.10",
    "pino-pretty": "^13.1.3",
    "pnpm": "^8.0.0",
    "typescript": "^5.4.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}