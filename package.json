{
  "name": "shopickup-integration-layer",
  "version": "1.0.0",
  "description": "Universal Multi-Carrier Shipping Integration Layer",
  "private": true,
  "type": "module",
  "scripts": {
    "bootstrap": "pnpm install",
    "build": "pnpm -w -r build",
    "build:core": "pnpm -w -r --filter @shopickup/core build",
    "build:adapters": "pnpm -w -r --filter \"@shopickup/adapters-*\" build",
    "build:examples": "pnpm -w -r --filter \"examples/**\" build",
    "start:dev-server": "pnpm --filter examples/dev-server run start",
    "dev": "pnpm -w -r --parallel dev",
    "lint": "eslint . --ext .ts",
    "test": "vitest",
    "test:coverage": "vitest --run --coverage"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "devDependencies": {
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "c8": "^10.1.3",
    "eslint": "^8.54.0",
    "pnpm": "^8.0.0",
    "typescript": "^5.4.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}