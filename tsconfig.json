{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "lib": ["ES2022"],
    "baseUrl": ".",
    "paths": {
      "@shopickup/*": ["packages/*/dist/index.d.ts"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "noEmit": true
  },
  "references": [
    { "path": "packages/core" },
    { "path": "packages/adapters/foxpost" }
  ],
  "include": ["packages/**/src", "examples/**/src"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
