{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "lib": ["ES2022"],
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "noEmitOnError": true,
    "baseUrl": ".",
    "paths": {
      "@shopickup/core": ["packages/core/dist/index.js"],
      "@shopickup/adapters-foxpost": ["packages/adapters/foxpost/dist/index.js"]
    }
  },
  "references": [
    { "path": "packages/core" },
    { "path": "packages/adapters/foxpost" }
  ],
  "include": ["packages/**/src", "examples/**/src"],
  "exclude": ["node_modules", "dist"]
}
